<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gihan.chatapp.ui.StatusActivity">


    <include layout="@layout/app_bar_layout"
        android:id="@+id/status_app_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/status_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/status_app_bar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="53dp"
        android:hint="@string/your_status">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/status_chnge_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/status_input"
        android:layout_alignRight="@+id/status_input"
        android:layout_below="@+id/status_input"
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        android:layout_marginTop="28dp"
        android:padding="10dp"
        android:text="@string/status_chnge_status" />


</RelativeLayout>

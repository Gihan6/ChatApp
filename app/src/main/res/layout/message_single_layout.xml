<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_image_layout"

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/sm"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/message_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/message_image_layout"
        android:layout_toRightOf="@+id/message_image_layout"
        android:padding="10dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="Display name"
        android:textSize="14dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:layout_alignBaseline="@+id/message_display_name"
        android:layout_alignBottom="@+id/message_display_name"
        android:layout_toRightOf="@+id/message_display_name"
        android:layout_toEndOf="@+id/message_display_name"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:id="@+id/message_time_display" />
    <TextView
        android:id="@+id/message_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message"
        android:padding="10dp"
        android:layout_below="@+id/message_display_name"
        android:layout_alignLeft="@+id/message_display_name"
        android:layout_alignStart="@+id/message_display_name" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/message_image_chat"
        android:layout_below="@+id/message_text_layout"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Sender message"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:visibility="gone"

        android:layout_below="@+id/message_display_name"
        android:layout_alignBottom="@+id/message_text_layout" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/sender_message_image_chat"
        android:layout_below="@+id/message_text_layout"
        android:layout_toRightOf="@+id/message_text_layout"
        android:visibility="gone"

        android:layout_toEndOf="@+id/message_text_layout" />

</RelativeLayout>